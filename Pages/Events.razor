@page "/events"
@using EventManagerApp.Components

<h2>Events</h2>

@foreach (var evt in Events)
{
    <EventCard EventName="@evt.Name" EventDate="@evt.Date" Price="@evt.Price" IsAttending="@evt.IsAttending" />
}

@code {
    private List<EventModel> Events = new()
    {
        new EventModel { Name = "Tech Conference", Date = DateTime.Now.AddDays(5), Price = 99, IsAttending = false },
        new EventModel { Name = "Music Festival", Date = DateTime.Now.AddDays(10), Price = 150, IsAttending = true }
    };

    public class EventModel
    {
        public string Name { get; set; }
        public DateTime Date { get; set; }
        public decimal Price { get; set; }
        public bool IsAttending { get; set; }
    }
}
